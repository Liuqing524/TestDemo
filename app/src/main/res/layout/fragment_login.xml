<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="280dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="手机号/邮箱"
        android:id="@+id/kr_information_login_et_num"/>
     <EditText
         android:layout_width="280dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:hint="密码"
         android:id="@+id/kr_information_password"/>
    <Button
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码?"
        android:layout_marginLeft="250dp"/>
    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00000000"
        android:layout_marginTop="30dp"
        android:text="登录"
        android:id="@+id/kr_information_login_btn"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageButton
        android:id="@+id/kr_information_login_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/common_icon_share_qq"
        android:background="#00000000"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:src="@mipmap/common_icon_share_weibo"
        android:background="#00000000"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        />

    </LinearLayout>
</LinearLayout>