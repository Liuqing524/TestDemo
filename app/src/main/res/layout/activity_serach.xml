<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/serach_ib_ser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/seaarch_nav_icon_search"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/serach_et_ser"
            android:layout_width="260dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:hint="搜索新闻/用户/公司"
            />
        <ImageButton

            android:id="@+id/serach_ib_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/login_icon_delete"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/search_tv_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_marginLeft="20dp"
            android:textColor="#6699FF"/>


    </LinearLayout>


    <ListView
        android:id="@+id/serach_lv_qian"
        android:layout_width="match_parent"
        android:divider="@null"
        android:layout_height="wrap_content"></ListView>
    <ListView
        android:id="@+id/serach_lv_hou"
        android:layout_width="match_parent"
        android:divider="@null"
        android:layout_height="wrap_content"></ListView>



</LinearLayout>