<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/item_found_early_image"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/item_found_early_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="算法发货发我的啊啊啊发我"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/item_found_early_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发hiUS发马克打啊欧热水"
        android:layout_margin="10dp"
        android:textSize="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_found_early_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报名中"
            android:layout_margin="10dp"
            android:background="@drawable/shapeone"
            android:gravity="center"
            android:textSize="10dp"/>
        <ImageView
            android:id="@+id/item_found_early_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/common_icon_location"
            android:background="#00000000"
            android:layout_toRightOf="@+id/item_found_early_status"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/item_found_early_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:layout_toRightOf="@+id/item_found_early_location"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/item_found_early_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10月12日 - 10月14日"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

</LinearLayout>