<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.dllo.testdemo.dialog.NewsDetailsDialogActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/news_dialog_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="支持作者"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/dialog_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="打赏"
            android:layout_toRightOf="@+id/news_dialog_tv"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="200dp"
            android:textColor="#6699FF"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/news_dialog_tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="屏幕亮度"
            android:layout_below="@+id/news_dialog_tv"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:textColor="#000000"/>
        <SeekBar
            android:id="@+id/news_dialog_pb"
            android:layout_width="120dp"
            android:layout_height="30dp"

            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_toRightOf="@+id/news_dialog_tv_one"
            android:layout_below="@+id/dialog_btn"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="150dp"/>

        <TextView
            android:id="@+id/news_dialog_tv_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字体大小"
            android:layout_below="@+id/news_dialog_tv_one"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/dialog_tv_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/news_dialog_tv_second"
            android:layout_below="@+id/news_dialog_tv_one"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/dialog_tv_centre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/news_dialog_tv_one"
            android:layout_below="@+id/news_dialog_tv_one"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:id="@+id/dialog_tv_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/news_dialog_tv_one"
            android:layout_below="@+id/news_dialog_tv_one"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            />
        <TextView
            android:id="@+id/dialog_tv_superbig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超大"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/news_dialog_tv_one"
            android:layout_below="@+id/news_dialog_tv_one"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="200dp"
            />
    </RelativeLayout>


</RelativeLayout>
